{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "components": [
        "components"
      ],
      "utils/*": [
        "utils/*"
      ],
      "context/*": [
        "context/*"
      ],
      "context": [
        "context"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "hooks": [
        "hooks"
      ]
    }
  },
  "include": [
    "src"
  ]
}
